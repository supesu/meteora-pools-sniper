# Solana Token Sniping Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
SNIPING_BOT_ENVIRONMENT=production
SNIPING_BOT_LOG_LEVEL=info

# =============================================================================
# gRPC SERVER CONFIGURATION
# =============================================================================
SNIPING_BOT_GRPC_HOST=0.0.0.0
SNIPING_BOT_GRPC_PORT=50051
SNIPING_BOT_GRPC_MAX_RECV_SIZE=4194304
SNIPING_BOT_GRPC_MAX_SEND_SIZE=4194304
SNIPING_BOT_GRPC_TIMEOUT=30s

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION
# =============================================================================
SNIPING_BOT_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SNIPING_BOT_SOLANA_WS_ENDPOINT=wss://api.mainnet-beta.solana.com
SNIPING_BOT_SOLANA_PROGRAM_IDS=11111111111111111111111111111111,TokenkegQfeZyiNwAJbNbGKPFXCWuBvf9Ss623VQ5DA
SNIPING_BOT_SOLANA_SCAN_INTERVAL=1s
SNIPING_BOT_SOLANA_MAX_RETRIES=3
SNIPING_BOT_SOLANA_RETRY_DELAY=5s

# =============================================================================
# DISCORD CONFIGURATION (REQUIRED)
# =============================================================================
# Follow DISCORD_SETUP.md to get these values

# Discord Bot Token (from Discord Developer Portal)
SNIPING_BOT_DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# Alternative: Discord Webhook URL (use instead of bot token)
SNIPING_BOT_DISCORD_WEBHOOK_URL=

# Discord Channel ID where notifications will be sent
SNIPING_BOT_DISCORD_CHANNEL_ID=YOUR_DISCORD_CHANNEL_ID_HERE

# Bot display settings
SNIPING_BOT_DISCORD_USERNAME=Solana Token Sniping Bot
SNIPING_BOT_DISCORD_AVATAR_URL=

# Connection settings
SNIPING_BOT_DISCORD_TIMEOUT=30s
SNIPING_BOT_DISCORD_MAX_RETRIES=3
SNIPING_BOT_DISCORD_RETRY_DELAY=5s

# Embed color (decimal format: 65280 = 0x00ff00 green)
SNIPING_BOT_DISCORD_EMBED_COLOR=65280

